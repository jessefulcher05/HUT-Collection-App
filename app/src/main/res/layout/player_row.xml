<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent">

    <CheckBox
        android:id="@+id/checkBox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="19dp"
        android:paddingRight="15dp"
        android:textIsSelectable="false"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/checkBox1"
        android:layout_alignBottom="@+id/checkBox1"
        android:layout_toRightOf="@+id/checkBox1"
        android:layout_toEndOf="@+id/checkBox1"
        android:scrollHorizontally="true"
        android:ellipsize="end"
        android:maxLines="1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$"
        android:textSize="15dp"
        android:id="@+id/textViewMoneySign1"
        android:editable="false"
        android:layout_column="3"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="4"
        android:textSize="17dp"
        android:maxLength="7"
        android:id="@+id/pricePaid"
        android:layout_weight="1"
        android:paddingRight="15dp"
        android:layout_column="5"
        android:layout_alignBottom="@+id/priceSold"
        android:layout_toRightOf="@+id/textViewMoneySign1"
        android:layout_toEndOf="@+id/textViewMoneySign1"
        android:imeOptions="actionDone"
        android:selectAllOnFocus="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$"
        android:textSize="15dp"
        android:id="@+id/textViewMoneySign2"
        android:editable="false"
        android:layout_column="20"
        android:layout_alignBaseline="@+id/textViewMoneySign1"
        android:layout_alignBottom="@+id/textViewMoneySign1"
        android:layout_toLeftOf="@+id/priceSold"
        android:layout_toStartOf="@+id/priceSold" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="4"
        android:textSize="17dp"
        android:maxLength="7"
        android:id="@+id/priceSold"
        android:layout_weight="1"
        android:layout_column="29"
        android:layout_above="@+id/textType"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:imeOptions="actionDone"
        android:selectAllOnFocus="true"/>

    <TextView
        android:id="@+id/textPosition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="P"
        android:paddingRight="15dp"
        android:layout_column="1"
        android:layout_below="@+id/checkBox1"
        android:layout_toRightOf="@+id/checkBox1"
        android:layout_toEndOf="@+id/checkBox1" />

    <TextView
        android:id="@+id/textType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="T"
        android:paddingRight="15dp"
        android:layout_column="3"
        android:layout_alignBaseline="@+id/textPosition"
        android:layout_alignBottom="@+id/textPosition"
        android:layout_toRightOf="@+id/textPosition"
        android:layout_toEndOf="@+id/textPosition" />




</RelativeLayout>