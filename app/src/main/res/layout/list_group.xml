<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/leagueheaderbackground">  <!-- This refrencs leagueheaderbackground.xmlerbackground.xml which refrences two background options DO NOT CHANGE-->

    <RelativeLayout
        android:layout_width="306dp"
        android:layout_height="wrap_content">


    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/nhl"
        android:contentDescription="LeagueLogo"
        android:id="@+id/imageViewLeagueLogo"
        android:layout_alignParentTop="true"
        android:padding="5dp"/>

    <TextView
        android:id="@+id/lblListHeader"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:textSize="25dp"
        android:padding="15dp"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:text="League"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageViewLeagueLogo"/>

    </RelativeLayout>

</LinearLayout>