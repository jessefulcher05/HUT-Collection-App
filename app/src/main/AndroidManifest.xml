<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jesse.hutcollectionapp_final" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LeagueTeamListView"
            android:label="@string/title_activity_league_team_list_view" >
        </activity>
        <activity
            android:name=".TeamCheckList"
            android:label="@string/title_activity_team_check_list"
            android:windowSoftInputMode="adjustPan">
        </activity>
    </application>
    <uses-permission android:name="android.permission.VIBRATE"></uses-permission>

</manifest>
